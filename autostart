#!/bin/sh

# start ssh-agent & gpg-agent
eval $(ssh-agent) &
eval $(gpg-agent --daemon) &

# init dbus
if which dbus-launch >/dev/null && test -z "$DBUS_SESSION_BUS_ADDRESS"; then
  eval $(dbus-launch --sh-syntax --exit-with-session) &
fi

# daemonise URxvt
urxvtd -q -f -o &

# keep clipbaord in sync
autocutsel -fork &
autocutsel -selection PRIMARY -fork &
 
# audio level +- 0dB
# amixer -- sset Headphone playback 0dB &

# source X settings
xrdb -merge ~/.Xresources &

# desktop 
xsetroot -solid "#505050" &

# DPMS monitor setting (standby -> suspend -> off) (seconds)
# xset dpms 600 1200 2000

# mouse control
# xset m 7 10 &     # Very Fast
# xset m 5 10 &     # Faster
# xset m 3 10 &     # Normal(Fast)
# xset m default &  # System Default
# xset m 0 10 &     # Glacial

# disable beeps
xset -b &

# Screenlock
xautolock -time 5 -locker 'i3lock -d -c 000000' &

# set LCD brightness
# xbacklight -set 100 &

# system info
# conky &

# set compose key
setxkbmap -option compose:ralt &

xmodmap ~/.Xmodmap &

# refresh
xrefresh &

# good work :)
exit 0
